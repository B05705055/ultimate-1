<project name="proj1" default="generate_parser" basedir=".">
	<record name="${workspacedir}/antbuild-acslparser.log" />
	
	<property name="cupDir" location="${workspacedir}/JavaCup/bin" />
	<property name="flexJar" location="${workspacedir}/JavaCup/JFlex.jar" />
	<description>
        Build File for Compiler Project
    </description>

	<target name="generate_parser">
		<java classname="java_cup.Main" classpath="${cupDir}" fork="true">
			<arg value="GlobalLocalParser.cup" />
		</java>
		<java jar="${flexJar}" fork="true">
			<arg value="Scanner.jflex" />
		</java>
	</target>
</project>
