<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="de.uni_freiburg.informatik.ultimate.ep.controller">
      <impl
            class="tw.ntu.svvrl.ultimate.scantu.scantuController"
            isGraphical="true"
            preference="100">
      </impl>
   </extension>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="tw.ntu.svvrl.ultimate.scantu.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="tw.ntu.svvrl.ultimate.scantu.Perspective"
            name="Perspective"
            id="tw.ntu.svvrl.ultimate.scantu.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="tw.ntu.svvrl.ultimate.scantu.views.FolderView"
            id="tw.ntu.svvrl.ultimate.scantu.views.FolderView"
            name="Folder"
            restorable="true">
      </view>
      <view
            class="de.uni_freiburg.informatik.ultimate.gui.views.LoggingView"
            id="de.uni_freiburg.informatik.ultimate.gui.views.LoggingView"
            name="Logging"
            restorable="true">
      </view>
      <view
            class="tw.ntu.svvrl.ultimate.scantu.views.OperationView"
            id="tw.ntu.svvrl.ultimate.scantu.views.OperationView"
            name="Operation"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="tw.ntu.svvrl.ultimate.scantu.application"
            name="Scantu Model Checker">
         <property
               name="appName"
               value="Scantu Model Checker">
         </property>
      </product>
   </extension>

</plugin>
