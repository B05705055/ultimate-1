<project name="proj1" default="generate_parser" basedir=".">
	    <property name="cupDir" location="../../../JavaCup/bin"/>
	    <property name="flexJar" location="../../../JavaCup/JFlex.jar"/>
	<description>
		Build File for Compiler Project
	</description>


	<target name="generate_parser">
		<java classname="parser" classpath="${cupDir}" fork="true">
			<arg value="AutPromela.cup" />
		</java>
		<java jar="${flexJar}" fork="true">
			<arg value="AutPromela.jflex" />
		</java>
		
		<java classname="parserAP" classpath="${cupDir}" fork="true">
			<arg value="Apformula.cup" />
		</java>
		<java jar="${flexJar}" fork="true">
			<arg value="Apformula.jflex" />
		</java>

	</target>

</project>
