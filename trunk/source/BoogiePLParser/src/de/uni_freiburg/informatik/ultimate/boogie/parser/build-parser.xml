<project name="proj1" default="generate_parser" basedir=".">
    <property name="cupDir" location="../../../../../../../../JavaCup/bin"/>
    <property name="flexJar" location="../../../../../../../../JavaCup/JFlex.jar"/>
    <description>
        Build File for Compiler Project
    </description>


    <target name="generate_parser">
        <java classname="java_cup.Main" classpath="${cupDir}" fork="true">
        	<arg line="-expect 1" /> <!-- FIXME: Necessary for attributes of assert and assume -->
        	<arg value="Boogie.cup" />
        </java>
        <java jar="${flexJar}" fork="true">
        	<arg value="Boogie.flex" />
        </java>
    </target>

</project>
