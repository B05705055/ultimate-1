<?xml version="1.0" encoding="UTF-8"?>
<sspaceex xmlns="http://www-verimag.imag.fr/xml-namespaces/sspaceex" version="0.2" math="SpaceEx">
  <component id="A">
    <note>
	<l id="1">
	  <b> i &gt; 0.0 - 10.0</b>
	</l>
    </note>
    <param name="x" type="real" d1="1" d2="1" local="false" dynamics="any"></param>
    <param name="i" type="real" d1="1" d2="1" local="false" dynamics="any"></param>

    <location id="1" name="off" x="100" y="100" width="100" height="80">
              <invariant>x &lt;= 10.0</invariant>
              <flow>x' == 1.0, i' == 0.0</flow>
    </location>


    <transition source="1" target="1">
                <label>e</label>
                <guard>x &gt;= 10.0</guard>
                <assignment>x == 0.0, i == i + 1.0</assignment>
    </transition>

   </component>
      <component id="system">
                 <param name="x" type="real" d1="1" d2="1" local="false" dynamics="any"></param>
		 <param name="i" type="real" d1="1" d2="1" local="false" dynamics="any"></param>
                 <bind component="A" as="H">
                       <map key="x">x</map>
                       <map key="i">i</map>
                 </bind>
   </component>
</sspaceex>
